{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "epm",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#function-declaration"
		},
		{
			"include": "#expr-block"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.epm",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.single.epm",
			"begin": "'",
			"end": "'",
			"patterns": [{
					"name": "constant.character.escape.epm",
					"match": "\\\\."
			}]
		},
		"comment": {
			"patterns": [{
				"name": "comment.line.epm",
				"begin": "#",
				"end": "$"
			}]
		},
		"function-declaration": {
			"name": "meta.function.epm",
			"begin": "(?i)([_a-z][0-9_a-z]+)[\\$\\?#~&]",
			"beginCaptures":
			{
				"0": {
					"name": "entity.name.function.epm"
				}
			},
			"end": "=",
			"patterns": [
				{
					"include": "#parameter-list"
				}
			]
		},
		"parameter-list": {
			"begin": "\\(",
			"end": "\\)",
			"patterns": [{
				"name": "meta.parameter.epm",
				"match": "(?i)\\b(const|var)?\\s*([_a-z][0-9_a-z]*[\\$\\?#~&])([^\\);,]*)[,]"
			},
			{
				"name": "meta.parameter.epm",
				"match": "(?i)\\b(const|var)?\\s*([_a-z][0-9_a-z]*[\\$\\?#~&])([^\\);,]*)"
			}]
		},
		"expr-block": {
			"begin": "{",
			"end": "}",
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#comment"
				}
			]
		}
	},
	"scopeName": "source.epm"
}
